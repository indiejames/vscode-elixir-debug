{
	"name": "elixir-debug",
	"displayName": "Elixir Debug",
	"version": "0.1.0",
	"publisher": "jamesnorton",
	"description": "Elixir debugger for Visual Studio Code.",
	"author": {
		"name": "James Norton"
	},
	"engines": {
		"vscode": "^0.10.1"
	},
	"icon": "images/mock-debug-icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-mock-debug.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-mock-debug/issues"
	},
	"dependencies": {
		"vscode-debugadapter": "^1.0.1",
		"vscode-debugprotocol": "^1.0.1"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"mocha": "*"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"watch": "tsc -w -p ./src",
		"test": "mocha out/tests"
	},
	"contributes": {
		"debuggers": [
			{
				"type": "elixir",
				"label": "Elixir",

				"enableBreakpointsFor": { "languageIds": [ "elixir" ] },

				"program": "./out/elixirDebug.js",
				"runtime": "node",

				"configurationAttributes": {
					"launch": {
						"required": [ "mixFile" ],
						"properties": {
							"program": {
								"type": "string",
								"description": "Workspace relative path to a mix file.",
								"default": "./mix.exs"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							}
						}
					}
				},

				"initialConfigurations": [
					{
						"name": "Elixir-Debug",
						"type": "elixir",
						"request": "launch",
						"mode": "debug",
						"mixFile": "${workspaceRoot}/mix.exs",
						"stopOnEntry": true
					}
				]
			}
		]
	}
}